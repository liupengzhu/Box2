<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.larunda.titlebar.TitleBar
        android:id="@+id/add_task_title_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp"></com.larunda.titlebar.TitleBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="任务名称："
            android:textColor="@color/list_text_h"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_task_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:background="@drawable/text_edit"
            android:gravity="right|center"
            android:hint="请输入"
            android:imeOptions="actionNext"
            android:maxLength="20"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/list_text_l"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/add_task_interval_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="通讯间隔："
            android:textColor="@color/list_text_h"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/add_task_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/add_task_interval_text"
            android:background="@drawable/text_edit"
            android:gravity="center_vertical"
            android:hint="请输入30-1800的整数"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/list_text_n"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/add_task_leaving_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="离位警报："
            android:textColor="@color/list_text_h"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/add_task_leaving_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/add_task_leaving_text"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/add_task_leaving_close_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button2"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="关"
                android:textColor="@color/radio_text_color"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/add_task_leaving_open_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button3"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="开"
                android:textColor="@color/radio_text_color"
                android:textSize="13sp" />

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/add_task_defence_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="布防警报："
            android:textColor="@color/list_text_h"
            android:textSize="15sp" />

        <RadioGroup
            android:id="@+id/add_task_defence_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/add_task_defence_text"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/add_task_defence_close_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button2"
                android:button="@null"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="关"
                android:textColor="@color/radio_text_color"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/add_task_defence_open_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/radio_button3"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="开"
                android:textColor="@color/radio_text_color"
                android:textSize="13sp" />

        </RadioGroup>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/add_task_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/save_button"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>