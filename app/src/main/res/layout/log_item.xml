<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/log_img"
        android:src="@drawable/message"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/log_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/log_img"
        android:layout_toEndOf="@+id/log_img"
        android:textColor="@color/black"
        android:text="递送箱caozuojilu" />
    <TextView
        android:id="@+id/log_time"
        android:text="2017-10-11"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/log_info"
        android:layout_alignBottom="@+id/log_img"
        android:maxLines="1"
        android:layout_toEndOf="@+id/log_img"
        android:textSize="18sp"
        android:textColor="@color/ziblack2"
        android:ellipsize="end"
        android:text="递送箱caozuojilu递送箱caozuojilu递送箱caozuoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>