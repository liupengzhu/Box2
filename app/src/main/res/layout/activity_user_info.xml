<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_error"
    android:orientation="vertical">

    <com.larunda.titlebar.TitleBar
        android:id="@+id/user_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp">

    </com.larunda.titlebar.TitleBar>


    <RelativeLayout
        android:id="@+id/user_info_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/user_info_serch_edit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/serch_edit"
            android:hint="用户名"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/color_cursor" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/list_serch" />

        <ImageView
            android:id="@+id/user_info_cancel_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/user_info_serch_edit"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/list_unsherch" />

        <TextView
            android:id="@+id/user_info_ensure_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="确定"
            android:textColor="@color/menu_sz_color"
            android:textSize="20sp" />

    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/user_info_swiper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/user_info_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:id="@+id/user_info_loading_error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_error"
                android:visibility="invisible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading_error" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="网络链接异常"
                        android:textSize="20sp" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/user_info_loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_error"
                android:visibility="invisible" />
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/user_info_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/user_info_all_checked_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/unchecked" />

        <TextView
            android:id="@+id/user_info_all_checked_text"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="全选"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/user_info_delete_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/log_wdu"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>
