<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/list_serch_edit"
                android:hint="递送箱序列号"
                android:background="@drawable/serch_edit"
                android:layout_centerVertical="true"
                android:layout_width="300dp"
                android:cursorVisible="false"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:maxLines="1"
                android:layout_height="40dp" />
            <ImageView
                android:src="@mipmap/list_serch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="50dp"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:src="@mipmap/list_unsherch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@+id/list_serch_edit"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:text="确定"
                android:textSize="20sp"
                android:textColor="@color/menu_sz_color"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/box_list_swiper"
        >
        <android.support.v7.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/dsx_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.CardView>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>