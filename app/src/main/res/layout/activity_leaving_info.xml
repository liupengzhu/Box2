<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical">

    <com.larunda.titlebar.TitleBar
        android:id="@+id/leaving_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </com.larunda.titlebar.TitleBar>

    <android.support.design.widget.TabLayout
        android:id="@+id/leaving_info_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/menu_sz_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/list_text_h">

    </android.support.design.widget.TabLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:orientation="vertical" />


    <android.support.v4.view.ViewPager
        android:id="@+id/leaving_info_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/menu_sz_color"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="20dp" />
</LinearLayout>
