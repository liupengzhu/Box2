<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical">

    <com.larunda.titlebar.TitleBar
        android:id="@+id/personal_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp">

    </com.larunda.titlebar.TitleBar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/personal_info_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/personal_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/personal_info_setting_photo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="个人头像"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/personal_info_photo"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:src="@drawable/touxiang" />

                            <ImageView
                                android:id="@+id/personal_info_photo_img"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/right_icon" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="用户名"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/personal_info_user_text"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="zq053694"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="姓名"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/personal_info_name_text"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:text="张三"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="密码"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/personal_info_password_text"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:inputType="textPassword"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="确认密码"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/personal_info_repassword_text"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:inputType="textPassword"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="手机号"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/personal_info_tel_text"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:inputType="phone"
                                android:maxLength="11"
                                android:maxLines="1"
                                android:text="18923654897"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="邮箱"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/personal_info_email_text"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:inputType="textEmailAddress"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:text="189525163648@qq.com"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:id="@+id/personal_info_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="单位"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/personal_info_company_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:text="家乐福"
                                android:textColor="@color/list_text_l"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/personal_info_company_img"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/right_icon" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:id="@+id/personal_info_department"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="部门"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/personal_info_department_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:text="导购员"
                                android:textColor="@color/list_text_l"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/personal_info_department_img"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/right_icon" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/line"
                            android:orientation="vertical" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="权限等级"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/personal_info_level_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:text="一般用户"
                                android:textColor="@color/list_text_l"
                                android:textSize="15sp" />


                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

                <Button
                    android:id="@+id/personal_info_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/menu_sz_color"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/personal_info_loading_error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_error"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading_error" />

                    <TextView
                        android:id="@+id/loading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="点击刷新"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/personal_info_loading_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_error"
                android:visibility="gone" />
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

