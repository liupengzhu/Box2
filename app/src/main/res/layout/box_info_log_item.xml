<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/box_info_log_list_img"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"

        >

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/line" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:src="@drawable/point" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/line" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="15dp"
        android:layout_toRightOf="@id/box_info_log_list_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/box_info_log_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权历史记录"
                android:textColor="@color/list_text_h"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/box_info_log_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2017-11-13"
                android:textColor="@color/list_text_l"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/box_info_log_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员驳回张三于2017/11/06对xxxx00001的开箱请求"
            android:textColor="@color/list_text_n"
            android:maxLines="2"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/line" />

</RelativeLayout>