<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.larunda.titlebar.TitleBar
        android:id="@+id/company_title_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp">

    </com.larunda.titlebar.TitleBar>

    <cn.com.larunda.safebox.util.CustomViewPager
        android:id="@+id/company_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></cn.com.larunda.safebox.util.CustomViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <android.support.design.widget.TabLayout
        android:id="@+id/company_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/tab_background"
        app:tabIndicatorHeight="0dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/normal"></android.support.design.widget.TabLayout>
</LinearLayout>
