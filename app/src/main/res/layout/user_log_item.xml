<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/user_log_list_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/message" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/user_log_list_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_log_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="授权历史记录"
                android:textColor="@color/list_text_h"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/user_log_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2017-11-13"
                android:textColor="@color/list_text_l"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_log_data_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="管理员驳回张三于2017/11/06对xxxx00001的开箱请求"
            android:textColor="@color/list_text_n"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout>