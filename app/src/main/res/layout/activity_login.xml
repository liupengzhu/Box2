<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    tools:context="com.example.box.LoginActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="30dp"
            android:src="@drawable/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/login_textinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textSize="20sp" />


    </RelativeLayout>
    <ImageView
        android:layout_gravity="center"
        android:src="@mipmap/app"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:layout_marginTop="140dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:text="用户名/邮箱/手机号"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/login_name"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:maxLines="1"
            android:maxLength="20"
            android:background="@drawable/login_name"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <ImageView
            android:src="@drawable/name"
            android:layout_alignRight="@+id/login_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="30dp"
        android:text="密码"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/login_password"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:maxLines="1"
            android:maxLength="20"
            android:inputType="textPassword"
            android:background="@drawable/login_name"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <ImageView
            android:src="@drawable/password"
            android:layout_alignRight="@+id/login_password"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/check_button"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:theme="@style/My_CheckBox"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/check_button"
            android:textColor="@color/white"
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:textSize="20dp"
        android:text="立即登录"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/login_button"
        android:textColor="@color/white"
        android:background="@drawable/login_button"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="还未注册过账号 立即注册"
            android:textColor="@color/white" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:src="@drawable/register"
                android:layout_gravity="center"
                android:layout_width="13dp"
                android:layout_height="13dp" />
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>
