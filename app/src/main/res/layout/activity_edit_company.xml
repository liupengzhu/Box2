<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.larunda.titlebar.TitleBar
        android:id="@+id/edit_company_title_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp">

    </com.larunda.titlebar.TitleBar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/edit_company_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/edit_company_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/edit_company_pic"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="20dp" />

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="名称"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_name"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="销售中心"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_sales_address"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="地址"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_address"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="传真"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_fax"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="邮箱"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_email"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="联系人"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_contacts"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="联系电话"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_tel"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:inputType="phone"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:text="简码"
                                android:textColor="@color/list_text_h"
                                android:textSize="15sp" />

                            <EditText
                                android:id="@+id/edit_company_letter"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="50dp"
                                android:background="@drawable/text_edit"
                                android:gravity="right|center"
                                android:hint="请输入"
                                android:imeOptions="actionNext"
                                android:maxLength="15"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColor="@color/list_text_l"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="15sp" />
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

                <Button
                    android:id="@+id/edit_company_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/save_button"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/edit_company_loading_error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/login_error"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/loading_error" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="网络链接异常,点击刷新"
                        android:textSize="20sp" />
                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>