<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_error"
    android:orientation="vertical">

    <com.larunda.titlebar.TitleBar
        android:id="@+id/enclosure_info_title_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </com.larunda.titlebar.TitleBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enclosure_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="阳澄湖国际科创园"
            android:textColor="@color/menu_sz_color" />
    </LinearLayout>

    <com.baidu.mapapi.map.MapView
        android:id="@+id/enclosure_info_map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"></com.baidu.mapapi.map.MapView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/log_wdu"
            android:text="删除"
            android:textColor="@color/white" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@color/menu_sz_color"
            android:text="编辑"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
